  "version": "0.2.0",
  "configurations": [
    {
      "name": "Core Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/core",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "esbuild-runner/register",
        "--timeout",
        "15000",
        "--colors",
        "test/**/*.test.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
